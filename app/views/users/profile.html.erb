<script type="text/javascript" src="<%= asset_path("profile.js") %>"></script>


<div class="container">

  <input type="hidden" id='api-token' value="<%= @user.token %>">

  <div class="row marginTop">
    <div class="col-md-1 col-lg-2">
    </div>
    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
      <div class="title">Profile</div>
    </div>
  </div>

  <%= form_for @user do |f| %>
  <div class="row marginTop">
    <div class="col-md-1 col-lg-2">
    </div>
    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
      <%= f.label :first_name, "First name:" %>
      <%= @user.first_name %>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
      <%= f.label :last_name, "Last name:"%>
      <%= @user.last_name %>
    </div>
  </div>

  <div class="row marginTop">
    <div class="col-md-1 col-lg-2">
    </div>
    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
      <%= f.label :username, "Username:" %>
      <%= @user.username %>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
      <%= f.label :email, "Email:" %>
      <%= @user.email %>
    </div>
  </div>

  <div class="row marginTop">
    <div class="col-md-1 col-lg-2">
    </div>
    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
      <%= f.label :address %>
      <%= @user.address %>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
      <%= f.label :city %>
      <%= @user.city %>
    </div>
  </div>
  <div class="row marginTop">
    <div class="col-md-1 col-lg-2">
    </div>
    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
      <%= f.label :state %>
      <%= @user.state %>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
      <%= f.label :zip_code %>
      <%= @user.zip %>
    </div>
  </div>
  <div class="row marginTop">
    <div class="col-md-1 col-lg-2">
    </div>
    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
      <img class="profile-image" src="<%= @user.image_url %>">
    </div>

    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
    </div>
  </div>

  <% end %>

  <div class="row marginTop">
    <div class="col-md-1 col-lg-2">
    </div>
    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
        <a href="users/edit"><button class='mainButton'>Edit</button></a>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
        <a href="/users/vibe/"><button class='mainButton'>Vibe</button></a>
    </div>
  </div>
</div>
