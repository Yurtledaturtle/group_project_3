<input type="hidden" id='api-token' value="<%= @user.token %>">
<script type="text/javascript" src="<%= asset_path("slider.js") %>"></script>

<form class="create-rating" action="/api/ratings" method="post">
<p>
  <label for="amount">Mood Rating:</label>
  <input type="text" name="rating[mood]" id="amount">
</p>
<div id="slider-range-max"></div>
<textarea name="rating[comment]" rows="3" cols="45">Write something here</textarea>

<input type="hidden" name="rating[latitude]" id="lat">
<input type="hidden" name="rating[longitude]" id="lon">
<input type="submit" value="Add Rating">
</form>

